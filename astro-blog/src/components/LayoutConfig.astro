---
import { SITE } from "@config";
import { Icon } from "astro-icon/components";
---
<style>
  @import 'animate.css';

  .layout-config {
    @apply hidden transition ease-in;
  }

  .layout-config.visible {
    display: flex;
  }

  .layout-config .layout-options {
    @apply absolute top-[95%] rounded-md right-0 overflow-hidden bg-skin-tooltip z-10 p-2;
    animation: fadeIn ease-out;
    animation-duration: 0.5s;
  }

  .layout-config .layout-options li {
    line-height: 0;
    @apply p-3 sm:p-1;
  }

  /* .icon-gear {
    @apply cursor-pointer hover:animate-spin;
  } */

  .icon-gear.animated {
    @apply text-skin-accent;
  }

  #sun-svg:hover {
    @apply animate-spin;
  }

  #moon-svg {
    @apply scale-125 hover:rotate-12 sm:scale-100;
    transition: 0.3s all;
  }

  #font-size-btn {
    @apply cursor-pointer leading-5 text-center;
  }

  #font-size-btn:hover {
    animation: transformText infinite ease-out;
    animation-duration: 2s;
  }

  @keyframes transformText {
    0% {
      text-transform: none;
      opacity: 0;
    }

    25% {
      text-transform: lowercase;
      opacity: 1;
    }

    50% {
      text-transform: capitalize;
      opacity: 0;
    }

    100% {
      text-transform: uppercase;
      opacity: 1;
    }
  }
</style>
  
<div >

  <Icon
  name="gear"
  class="icon-gear"
  layout-config-trigger />

</div>

<div class="layout-config">
  <ul class="layout-options">
    {
      SITE.layoutConfig.lightAndDarkMode && (
        <li>
          <button
            id="theme-btn"
            class="focus-outline"
            title="Toggles light & dark"
            aria-label="auto"
            aria-live="polite"
          >
            <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
              <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
            </svg>

            <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
              <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
            </svg>
          </button>
        </li>
      )
    }

    <!-- <li id="font-size-btn">aA</li> -->

    <li>
      <button
      class="focus-outline"
      title="Toggles background animation"
      aria-label="auto"
      aria-live="polite"
      id="bg-animation-btn">

        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="m11.09 7.054l.11-.46q.027-.091.057-.181l.371-.841a5 5 0 1 1 6.491 6.958l-.532.213l-.117.037l-.511.128Q16.493 13 16 13a5 5 0 0 1-4.91-5.946M9.47 5.471a7.02 7.02 0 0 0-4 4A7.002 7.002 0 0 0 8 23a7 7 0 0 0 6.529-4.47q.198-.078.39-.166l.338-.135l-.01-.026a7.03 7.03 0 0 0 3.282-3.674q.198-.076.392-.165l.336-.135l-.01-.026A7 7 0 1 0 9.47 5.471M16 15a5 5 0 0 1-1.882 1.53l-.53.212l-.12.04l-.507.126q-.467.091-.961.092a5 5 0 0 1-4.91-5.946l.11-.46q.027-.091.057-.181l.372-.842A5 5 0 0 1 9 7.999V8a7 7 0 0 0 7 7M5 12a7 7 0 0 0 7 7a5 5 0 1 1-7-7"/></svg>

    </button>
    </li>
  </ul>
</div>

<script is:inline>
  document.addEventListener('astro:page-load', () => {
    const config = document.querySelector('.layout-config');
    const configTrigger = document.querySelector('*[layout-config-trigger]');

    const configIcon = document.querySelector('.icon-gear');

    const themeBtn = document.getElementById('theme-btn');
    const fontSizeBtn = document.getElementById('font-size-btn');
    const backgroundAnimationBtn = document.getElementById('bg-animation-btn');

    function toggleLayoutConfig() {

      config?.classList.toggle('visible');

      configIcon?.classList.toggle('animated');
    }
    configTrigger?.addEventListener("click", toggleLayoutConfig);

    function toggleBgAnimation() {
      document.querySelectorAll('canvas')?.forEach(el => {
        el.classList.toggle('hidden');
      });
    }
    backgroundAnimationBtn?.addEventListener("click", toggleBgAnimation);
  })
</script>