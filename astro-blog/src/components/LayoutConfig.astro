---
import { SITE } from "@config";
import { Icon } from "astro-icon/components";
---
<style>
  @import 'animate.css';

  .layout-config {
    @apply hidden transition ease-in;
  }

  .layout-config.visible {
    display: flex;
  }

  .layout-config .layout-options {
    @apply absolute top-[95%] rounded-md right-0 overflow-hidden bg-skin-tooltip bg-opacity-50 z-10 p-2;
    animation: fadeInDown ease-out;
    animation-duration: 1s;
  }

  .layout-config .layout-options li {
    line-height: 0;
    @apply p-3 sm:p-1;
  }

  .icon-gear {
    @apply cursor-pointer hover:animate-spin;
  }

  .icon-gear.animated {
    @apply animate-spin text-skin-accent;
  }

  #sun-svg:hover {
    animation: rotateIn infinite;
    animation-duration: 2s;
  }

  #theme-btn svg {
    @apply scale-125 hover:rotate-12 sm:scale-100;
  }

  #font-size-btn {
    @apply cursor-pointer leading-5 text-center;
  }

  #font-size-btn:hover {
    animation: transformText infinite ease-out;
    animation-duration: 2s;
  }

  @keyframes transformText {
    0% {
      text-transform: none;
      opacity: 0;
    }

    25% {
      text-transform: lowercase;
      opacity: 1;
    }

    50% {
      text-transform: capitalize;
      opacity: 0;
    }

    100% {
      text-transform: uppercase;
      opacity: 1;
    }
  }
</style>

