<script>
  const config = document.querySelector('.layout-config');
  const configTrigger = document.querySelector('*[layout-config-trigger]');
  function toggleLayoutConfig() {

    config?.classList.toggle('visible');

    configTrigger?.classList.toggle('animated');
  }
  configTrigger?.addEventListener(
    "click", toggleLayoutConfig
  );

  document.addEventListener("click", (e: MouseEvent) => {
    const target = e.target as HTMLElement;

    if (target !== configTrigger) {
      config?.classList.contains('visible') ? config.classList.remove('visible') : null;
      configTrigger?.classList.contains('animated') ? configTrigger.classList.remove('animated') : null; 
    }

  });
</script>